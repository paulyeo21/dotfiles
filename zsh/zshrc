PATH=/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin
export MYSQL_PATH=/usr/local/Cellar/mysql/5.7.17
export PATH="$HOME/.rbenv/shims:$HOME/.rbenv/bin:/usr/local/bin:/usr/local:/bin:/usr/bin:/usr/sbin:/sbin:$HOME/bin:$MYSQL_PATH/bin:$HOME/miniconda3/bin:$HOME/google-cloud-sdk/bin:$HOME/.kiex/bin:$HOME/.mix/escripts:$HOME/.dotfiles/bin:$HOME/Library/Python/3.7/bin"
export PS1='%n@%1~$ ' # custom prompt: paulyeo@exodia$
export REACT_EDITOR='vim'

# zsh settings
autoload -U compinit
compinit
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'

if [ -z "$HISTFILE" ]; then
  HISTFILE=$HOME/.zsh_history
fi
HISTSIZE=SAVEHIST=10000
setopt inc_append_history
setopt sharehistory
setopt extended_history
setopt hist_expire_dups_first
setopt hist_ignore_dups
setopt hist_ignore_space

alias ls="ls -FG"
alias ll="ls -l"
alias be="bundle exec"
alias tls="tmux list-session"
alias topen="tmux attach -t"
alias tnew="tmux new -s"
alias td="tmux detach"
alias tkill="tmux kill-session -t"
alias d="docker"

for zsh_source in $HOME/.dotfiles/zsh/config/*.zsh; do
	source $zsh_source
done

source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

# ensure_tmux_is_running

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/paulyeo/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/paulyeo/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/paulyeo/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/paulyeo/google-cloud-sdk/completion.zsh.inc'; fi

# sourcing elixir into path using kiex
[[ -f "$HOME/.kiex/scripts/kiex" ]] && source "$HOME/.kiex/scripts/kiex"
