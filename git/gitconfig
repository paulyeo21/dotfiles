[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[alias]
	sla = log --oneline --decorate --graph --all
	glog = log -E -i --grep
	unstage = reset
	uncommit = reset --soft HEAD^
	aa = add --all
	cb = checkout -b
	slo = log --oneline --decorate
	pod = push origin --delete
  pu = "!git push --force-with-lease origin \"$(git rev-parse --abbrev-ref HEAD)\""
  po = "!git push --set-upstream origin \"$(git rev-parse --abbrev-ref HEAD)\""
	fo = fetch origin
[push]
	default = simple
