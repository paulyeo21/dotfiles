set backspace=indent,eol,start  " Sane backspace behavior
set history=1000                " Remember last 1000 commands
set scrolloff=4                 " Keep at least 4 lines below cursor
set expandtab                   " Convert <tab> to spaces (2 or 4)
set tabstop=2                   " Two spaces per tab as default
set shiftwidth=2                "     then override with per filteype
set softtabstop=2               "     specific settings via autocmd
set laststatus=2                " Always show status line
set relativenumber
set number
set nobackup
set nowritebackup
set noswapfile
set grepprg=ag                  " Use silver searcher instead of grep
set showcmd
set wildmode=longest,list,full
set clipboard=unnamed
colorscheme lucius
LuciusDarkLowContrast

" Disable sound/visual bell on errors
set t_vb=

nmap 0 ^
nmap k gk
nmap j gj
map <leader>vi :tabe $MYVIMRC<cr>
map <leader>so :source $MYVIMRC<cr>
map <leader>ge :tabe ~/.dotfiles/vim/rcfiles/general<cr>
map <leader>gi :tabe ~/.dotfiles/git/gitconfig<cr>
map <leader>tm :tabe ~/.dotfiles/tmux/tmux.conf<cr>

map <leader>p :set paste<cr>o<esc>"*]p:set nopaste<cr>

" Edit another file in the same directory as the current file
" uses expression to extract path from current file's path
map <leader>e :e <C-R>=escape(expand("%:p:h"),' ') . '/'<CR>
map <leader>s :split <C-R>=escape(expand("%:p:h"), ' ') . '/'<CR>
map <leader>v :vnew <C-R>=escape(expand("%:p:h"), ' ') . '/'<CR>
map <leader>t :tabe <C-R>=escape(expand("%:p:h"), ' ') . '/'<CR>
map <leader>cp mmggVG"*y`m

command! WQ wq
command! Wq wq
command! W w
command! Q q
