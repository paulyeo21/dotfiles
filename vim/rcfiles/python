au BufNewFile, BufRead *.py
  \ set tabstop=4 |
  \ set softtabstop=4 |
  \ set shiftwidth=4 |
  \ set textwidth=79 |
  \ set expandtab |
  \ set autoindent |
  \ set fileformat=unix
let g:python_highlight_all = 1  " https://github.com/vim-python/python-syntax

autocmd Filetype python setlocal expandtab tabstop=4 shiftwidth=4 softtabstop=4
